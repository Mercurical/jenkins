pipeline {
    agent any

    environment {
        SYMFONY_ENV = 'prod'
    }

    stages {
        stage('Build environment'){
            steps{
                sh 'export PATH=/usr/home/Arti222/.virtualenvs/pajton/bin:/usr/local/devil/bin:/sbin:/bin:/usr/sbin:/usr/bin:/usr/games:/usr/local/sbin:/usr/local/bin:/usr/X11R6/bin:/home/Arti222/bin'
                sh 'hash -r 2>/dev/null'
                sh 'echo $PATH'
            }
        }
        stage('Build application'){
            steps{
                sh 'composer install --ignore-platform-reqs -n'
            }
        }

        stage('Deploy application'){
            steps{
                sh 'ansible-playbook -i hosts deploy.yml -vvv'
            }
        }
    }
}