pipeline {
    agent any

    environment {
        SYMFONY_ENV = 'prod'
    }

    stages {
        stage('Build environment'){
            steps{
                sh 'ansible-galaxy install carlosbuenosvinos.ansistrano-deploy --ignore-certs --roles-path ./roles'
            }
        }
        stage('Build application'){
            steps{
                sh 'composer install --ignore-platform-reqs -n'
            }
        }

        stage('Deploy application'){
            steps{
                sh 'ansible-playbook -i hosts deploy.yml -vvv'
            }
        }
    }
}